{
  "name": "diraq_desktop",
  "version": "0.0.0",
  "description": "DiraQ desktop application",
  "author": "DiraQ",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "build": "yarn build:renderer && yarn build:main && electron-builder",
    "build:main": "cross-env NODE_ENV=production webpack",
    "build:renderer": "nuxt generate",
    "prebuild": "rimraf build",
    "dev": "cross-env NODE_ENV=development node dev.js",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "build": {
    "productName": "DiraQ",
    "appId": "com.example.yourapp",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/static/icons/icon.icns",
      "target": "zip"
    },
    "win": {
      "icon": "main/static/icons/icon.ico",
      "target": "squirrel"
    },
    "squirrelWindows": {
      "loadingGif": "main/static/images/install-spinner.gif"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --format codeframe --fix --no-ignore",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "0.18.0",
    "chokidar": "2.1.5",
    "electron-squirrel-startup": "1.0.0",
    "element-ui": "2.7.2",
    "moment-timezone": "0.5.23",
    "nuxt": "2.6.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@fortawesome/fontawesome-free": "5.8.1",
    "axios-mock-adapter": "1.16.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "babel-plugin-dynamic-import-node": "2.2.0",
    "chalk": "2.4.2",
    "cross-env": "5.2.0",
    "electron": "4.1.4",
    "electron-builder": "20.39.0",
    "electron-builder-squirrel-windows": "20.40.0",
    "electron-devtools-installer": "2.2.4",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.17.1",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.2.2",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "ngrok": "3.1.1",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.0"
  }
}
