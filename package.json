{
  "name": "diraq_desktop",
  "version": "0.0.0",
  "description": "DiraQ desktop application",
  "author": "DiraQ",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "build": "npm run build:renderer && npm run build:main && electron-builder",
    "build:main": "node --require dotenv/config --require esm scripts/build.js",
    "build:renderer": "nuxt generate",
    "prebuild": "rimraf build dist",
    "dev": "node --require dotenv/config --require esm scripts/dev.js",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint --cache --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint --cache **/*.{css,vue}"
  },
  "build": {
    "productName": "DiraQ",
    "appId": "com.diraq.desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist"
    ],
    "publish": {
      "provider": "s3",
      "bucket": "diraq-develop-s3",
      "region": "ap-northeast-1"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "main/static/icons/icon.icns",
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "main/static/icons/icon.ico"
    },
    "linux": {
      "icon": "main/static/icons"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --format codeframe --fix --no-ignore",
      "git add"
    ],
    "*.{css,vue}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "0.19.0",
    "chokidar": "3.0.2",
    "electron-log": "3.0.6",
    "electron-updater": "4.0.6",
    "element-ui": "2.9.1",
    "moment-timezone": "0.5.25",
    "nuxt": "2.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@fortawesome/fontawesome-free": "5.9.0",
    "@nuxtjs/eslint-config": "0.0.1",
    "axios-mock-adapter": "1.16.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.6",
    "babel-plugin-dynamic-import-node": "2.2.0",
    "chalk": "2.4.2",
    "dotenv": "8.0.0",
    "electron": "5.0.3",
    "electron-builder": "22.3.2",
    "electron-devtools-installer": "2.2.4",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-nuxt": "0.4.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.2.2",
    "esm": "3.2.25",
    "husky": "2.4.0",
    "lint-staged": "8.2.0",
    "ngrok": "3.1.1",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "stylelint": "10.1.0",
    "stylelint-config-prettier": "5.2.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-order": "3.0.0",
    "stylelint-webpack-plugin": "0.10.5"
  }
}
