{
  "name": "diraq_desktop",
  "version": "0.0.0",
  "description": "DiraQ desktop application",
  "author": "DiraQ",
  "main": "main/index.js",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:renderer dev:main",
    "dev:renderer": "nuxt",
    "dev:main": "npm-run-all --serial dev:util dev:app",
    "dev:util": "wait-on http://localhost:3000/",
    "dev:app": "nodemon",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "axios": "0.18.0",
    "axios-mock-adapter": "1.16.0",
    "chokidar": "2.1.2",
    "element-ui": "2.4.11",
    "moment-timezone": "0.5.23",
    "node-sass": "4.11.0",
    "nuxt": "2.3.4",
    "sass-loader": "7.1.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "5.7.2",
    "babel-eslint": "10.0.1",
    "babel-plugin-dynamic-import-node": "2.2.0",
    "electron": "4.0.0",
    "electron-devtools-installer": "2.2.4",
    "eslint": "5.11.1",
    "eslint-config-prettier": "3.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.0.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "ngrok": "3.1.1",
    "nodemon": "1.18.9",
    "npm-run-all": "4.1.5",
    "prettier": "1.15.3",
    "wait-on": "3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --format codeframe --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "node .electron/dev-runner.js",
    "watch": [
      ".electron/",
      "common/",
      "main/"
    ]
  }
}
